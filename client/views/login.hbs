{{#if msg}}
<div class="error">
    {{ msg }}
</div>
{{/if}}
<form action="{{ login }}" method="get">
<p>Characters &, /, <, >, (, and, ) are not allowed.</p>
    <label for="email"><p>Email</p></label>
    <input type="email" id="email" name="email" pattern="[^&()/><\][\\\x22,;|]+" required>
    <label for="password"><p>Password</p></label>
    <input type="password" id="password" name="password" pattern="[^&()/><\][\\\x22,;|]+" required>
    <button type="submit">Button</button>
</form>